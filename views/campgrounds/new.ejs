<% include ../partials/header%>

<div class = "container">
	<div>
		<h1 style = "text-align:center;">Create a new Camp Ground</h1>
		<div style = "width:30%; margin:30px auto;">
			<form action='/campgrounds' method = "POST">
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "name" name = "name">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "number" placeholder = "price in $" min = "0.01" step ="0.01" name = "price">
			</div>
			
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "image-url" name = "image">
			</div>
			
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "Description" name = "description">
			</div>
			
			<div class = "form-group">
				<input class = "btn btn-lg btn-default btn-block btn-primary" type = "submit">
			</div>
		</form>
		<a href = "/campgrounds">Go Back</a>
		</div>
	</div>
	
</div>
<% include ../partials/footer%>
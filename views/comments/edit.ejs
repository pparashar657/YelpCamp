<% include ../partials/header%>

<div class = "container">
	<div>
		<h1 style = "text-align:center;">Edit Comment</h1>
		<div style = "width:30%; margin:30px auto;">
			<form action='/campgrounds/<%= camp_id%>/comments/<%= comment._id%>?_method=PUT' method = "POST">
			<div class = "form-group">
				<input class = "form-control" type = "text" value = "<%= comment.text%>" name = "comment[text]">
			</div>
			<div class = "form-group">
				<input class = "btn btn-lg btn-default btn-block btn-primary" type = "submit">
			</div>
		</form>
		<a href = "/campgrounds/<%= camp_id%>">Go Back</a>
		</div>
	</div>
	
</div>
<% include ../partials/footer%>